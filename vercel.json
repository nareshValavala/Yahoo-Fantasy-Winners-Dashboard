{
  "version": 2,
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },   
    { "src": "api/**/*.js", "use": "@vercel/node" }     
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },              
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "crons": [
    { "path": "/api/refresh-standings", "schedule": "0 12 * * 2" }
  ]
}
